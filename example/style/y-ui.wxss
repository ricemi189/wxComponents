page{
  background-color:#ffffff;
  height:100%;
}
image{
  width: 100%;
  height: 100%;
  display:block;
}
/* 扩展weui */
.weui-header{
  padding: 8px 0;
}
.weui-body{
  margin-bottom: 10px;
  padding:10px;
}
.weui-cells_noborder:before {
  display: none;
}
.weui-cells_noborder:after {
  display: none;
}
/* 盒模型 */
.border-box{
  box-sizing: border-box;
}
/* 改变文本对齐 */
.text-left{
  text-align: left;
}
.text-center{
  text-align: center;
}
.text-right{
  text-align: right;
}
.text-justify{
  text-align: justify;
}
.text-nowrap{
  white-space: nowrap;
}
/* 改变文字大小写 */
.text-lowercase{
  text-transform: lowercase;
}
.text-uppercase{
  text-transform: uppercase;
}
.text-capitalize{
  text-transform: capitalize;
}
/* 单行文本溢出省略 */
.ellipsis
{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis
}
/* 多行文本溢出省略,最好设置盒子为行高的整倍数 */
.ellipsis-rows{
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}
/* 快速浮动 */
/* 左浮动 */
.pull-left {
  display: block!important;
  float: left !important;
}
/* 右浮动 */
.pull-right {
  display: block!important;
  float: right !important;
}
/* 让内容块居中 */
.center-block {
  display: block;
  margin-left: auto;
  margin-right: auto;
}
/* 清除浮动 */
.clear {
	clear: both;
}
.clearfix::before {
	display: block;
	clear: both;
	content: "";
}
.clearfix::after {
	display: block;
	clear: both;
	content: "";
}
/*背景色*/
.bg-success{
  background-color: #28a745!important;
}
.bg-info{
  background-color: #17a2b8!important;
}
.bg-warning{
  background-color: #ffc107!important;
}
.bg-danger{
  background-color: #dc3545!important;
}
/*仿BootStrap进度条样式*/
.progress-container{
  height: 100%;
  padding: 0 5%;
  padding-top: 400rpx;
  box-sizing: border-box;
}
.progress-tip {
  text-align: center;
  margin-top: 70rpx;
  font-size: 18px;
}
/*进度条动画*/
@-webkit-keyframes progress-bar-stripes {
  from {
    background-position: 1rem 0;
  }
  to {
    background-position: 0 0;
  }
}
@keyframes progress-bar-stripes {
  from {
    background-position: 1rem 0;
  }
  to {
    background-position: 0 0;
  }
}
/*进度条背景色*/
.progress-bg-primary .progress-bar{
  background-color: #007bff;
}
.progress-bg-success .progress-bar{
  background-color: #28a745!important;
}
.progress-bg-info .progress-bar{
  background-color: #17a2b8!important;
}
.progress-bg-warning .progress-bar{
  background-color: #ffc107!important;
}
.progress-bg-danger .progress-bar{
  background-color: #dc3545!important;
}
.progress-bar-striped .progress-bar{
  background-image: linear-gradient(45deg, rgba(255, 255, 255, 0.15) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, 0.15) 50%, rgba(255, 255, 255, 0.15) 75%, transparent 75%, transparent);
  background-size: 1rem 1rem;
}
.progress-bar-animated .progress-bar{
  -webkit-animation: progress-bar-stripes 1s linear infinite;
  animation: progress-bar-stripes 1s linear infinite;
}
